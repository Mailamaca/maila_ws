// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
	"dockerFile": "Dockerfile",
	"build": {
		"args": {
			"WORKSPACE": "${containerWorkspaceFolder}"
		}
	},
	"remoteUser": "ros",
	"runArgs": [
        "--rm",
        "--user=ros",
        "--ipc=host", // https://askubuntu.com/questions/1237400/how-to-fix-x-error-badaccess-baddrawable-badshmseg-while-running-graphical-ap
        "--name=maila-humble-dev",
        "--network=host",
        "--privileged",
        "--ulimit=host",
        "--pids-limit=-1",
        "--userns=keep-id",
        // "--volume=/mnt/wslg:/mnt/wslg", // uncomment for windows
        "--volume=/tmp/.X11-unix:/tmp/.X11-unix"
	],
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}", // Needed for GUI try ":0" for windows
		"WAYLAND_DISPLAY": "${localEnv:WAYLAND_DISPLAY}",
		"XDG_RUNTIME_DIR": "${localEnv:XDG_RUNTIME_DIR}",
		"PULSE_SERVER": "${localEnv:PULSE_SERVER}",
		"LIBGL_ALWAYS_SOFTWARE": "1", // Needed for software rendering of opengl
                "ROS_LOCALHOST_ONLY": "1",
                "ROS_DOMAIN_ID": "42"
        },
        "postCreateCommand": "sudo chmod +x ${containerWorkspaceFolder}/.devcontainer/postCreateCommand.sh && ${containerWorkspaceFolder}/.devcontainer/postCreateCommand.sh",

	// Set *default* container specific settings.json values on container create.
	"customizations": {
		"vscode": {
			"extensions": [
				"althack.ament-task-provider",
				"betwo.b2-catkin-tools",
				"DotJoshJohnson.xml",
                "llvm-vs-code-extensions.vscode-clangd",
				"ms-azuretools.vscode-docker",
				"ms-iot.vscode-ros",
				"ms-python.python",
				"ms-vscode.cpptools",
				"redhat.vscode-yaml",
				"smilerobotics.urdf",
				"streetsidesoftware.code-spell-checker",
				"twxs.cmake",
				"yzhang.markdown-all-in-one",
				"zachflower.uncrustify"
			]
		}
	}
}
